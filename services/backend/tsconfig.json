{
  "extends": "./node_modules/@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./build",
    "allowJs": true,
    "incremental": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "utils/*": ["utils/*"],
      "constants/*": ["constants/*"],
      "database/*": ["database/*"],
      "database": ["database/index"],
      "middlewares/*": ["middlewares/*"],
      "passport/*": ["passport/*"],
      "routes/*": ["routes/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "build"]
}
